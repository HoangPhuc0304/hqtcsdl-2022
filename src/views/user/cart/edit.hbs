<div class="container" style="height: calc(100vh - 112px);">
    <div class="card">
        <div class="card-body">
            {{#with item}}
            <h3 class="card-title">{{TenMon}}</h3>
            {{/with}}
            {{!-- <h6 class="card-subtitle">globe type chair for rest</h6> --}}
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img
                            src="https://theroamingfork.com/wp-content/uploads/2022/10/Com-Tam-finished-dish.jpg"
                            class="img-responsive"
                            style="width: 100%; aspect-ratio: 2/3; object-fit: cover; border-radius: 4px 4px 0 0; transition: all 0.5s ease-in-out;">
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    {{#with item}}
                    <form action="/cart/{{ID_DonHang}}/edit" method="POST">
                        <div class="form-group mb-3">
                            <h4 class="">{{ID_DonHang}}</h4>
                            <h4 class="">{{GiaBan}}</h4>
                        </div>
                        <div class="form-group mb-3">
                            <label class=" control-label no-padding-right" for="quantity">Quantity:</label>
                            <div style="display: flex; flex-direction: column;">
                                <input type="number" id="quantity" name="quantity" disabled value="{{SoLuong}}">
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label class=" control-label no-padding-right d-block" for="option">Option:</label>
                            <select class="col-xs-10 col-sm-5" id="option" name="option" style="padding: 0;" disabled>
                                <option selected="true" value="{{TuyChon}}">{{TuyChon}}</option>
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label class=" control-label no-padding-right d-block" for="method">Method:</label>
                            <select class="col-xs-10 col-sm-5" id="method" name="method" style="padding: 0;" disabled>
                                <option selected="true" value="{{HinhThucThanhToan}}">{{HinhThucThanhToan}}</option>
                            </select>
                        </div>
                        {{/with}}
                        <div class="form-group mb-3">
                            <label class=" control-label no-padding-right d-block" for="address-select">Address:</label>
                            <select class="col-xs-10 col-sm-5 mb-2" id="address-select" name="address-select">
                                style="padding: 0;">
                                <option selected="true" disabled="disabled">Choose Address</option>
                                {{#each addresses}}
                                <option value="{{this.DiaChiGiaoHang}}">{{this.DiaChiGiaoHang}}</option>
                                {{/each}}
                            </select>
                            {{#with item}}
                            <div style="display: flex; flex-direction: column;">
                                <input type="text" id="address" name="address" placeholder="Enter address" required
                                    value="{{DiaChiGiaoHang}}">
                            </div>
                        </div>
                         <div class="form-group mb-3">
                            <label class=" control-label no-padding-right d-block" for="status">Status:</label>
                            <input type="text" disabled value="{{TinhTrangDonHang}}">
                        </div>
                        <a href="/" class="btn btn-secondary" style="width: 100px;">Back</a>
                        <a href="/cart/{{ID_DonHang}}/destroy" class="btn btn-danger" style="width: 100px;">Destroy</a>
                        <button type="submit" class="btn btn-primary" style="width: 100px;">Save</button>
                        {{/with}}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    const selectAddress = document.querySelector('#address-select');
    const address = document.querySelector('#address');

    selectAddress.onchange = (e) => {
        address.value = e.target.value;
    }
</script>