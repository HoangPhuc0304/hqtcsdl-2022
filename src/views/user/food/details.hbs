<div class="">
    <nav aria-label="breadcrumb" class="my-2 d-flex align-items-center justify-content-between">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-dark">Home</a></li>
        </ol>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/profile" class="text-dark">Account</a></li>
        </ol>
    </nav>
    <div class="container" style="height: calc(100vh - 112px);">
        <div class="card">
            {{#with food}}
            <div class="app" style="width: 100%; min-height: calc(100vh - 112px); padding: 0 1em;">
                <form action="/cart/{{ID_Mon}}" method="GET">
                    <h2 class="detaile-header">Chi tiết sản phẩm</h2>
                    <div class="detail-content">
                        <div class="detail-content-left">
                            <img src="/static/images/Food.jpg" alt="" class="detail-img">
                        </div>
                        <div class="detail-content-right">
                            <h3 class="detail-content-header">{{TenMon}}</h3>
                            <div class="rating">
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                            </div>
                            <div class="detail-price-container">
                                <h3 class="detail-price">{{GiaBan}}</h3>
                            </div>
                            <div class="detail-describe-container">
                                <h4>Describe</h4>
                                <p class="detail-describe-content">{{MieuTa}}</p>
                            </div>
                            <div class="d-flex align-items-center mt-3">
                                <a href="/" class="btn btn-secondary me-2">
                                    Back
                                </a>
                                <button type="submit" class="btn btn-success add-cart-btn">
                                    <i class="fa fa-cart-plus" aria-hidden="true"></i>
                                    Order
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            {{/with}}
        </div>
    </div>
</div>