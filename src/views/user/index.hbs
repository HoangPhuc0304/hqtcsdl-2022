<div>
    <nav aria-label="breadcrumb" class="my-2 d-flex align-items-center justify-content-between">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-dark">Home</a></li>
            {{!-- <li class="breadcrumb-item active" aria-current="page"><a href="/casts" class="text-dark">Casts</a>
            </li> --}}
        </ol>
    </nav>
    <div class="food-list"
        style="display: grid; grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr)); grid-gap: 16px 8px">
        {{#each foods}}
        <div class="food-card" style="border-radius: 4px;">
            <a href="/foods/{{this.ID_Mon}}">
                <section class="" style="max-width: 20rem;">
                    <div class="card">
                        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                            <img src='https://theroamingfork.com/wp-content/uploads/2022/10/Com-Tam-finished-dish.jpg'
                                class="img-fluid"
                                style="aspect-ratio: 3/2; object-fit: cover; border-radius: 4px 4px 0 0; transition: all 0.5s ease-in-out;" />
                            <a href="#!">
                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                            </a>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title font-weight-bold"><a
                                    style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; height: 64px;">{{this.TenMon}}</a>
                            </h4>
                            <span style="display: block;">
                                <i class="bi bi-pencil-square"></i>
                                {{this.MieuTa}}
                            </span>
                            <span class="badge bg-light text-dark me-2">
                                <i class="bi bi-shop"></i>
                                {{this.TenCuaHang}}
                            </span>
                            <div class="d-flex justify-content-start">
                                <span class="badge bg-light text-dark">{{this.GiaBan}}</span>
                                <span class="badge bg-light text-dark">{{this.TinhTrangMon}}</span>
                            </div>
                        </div>
                    </div>

                </section>
            </a>
        </div>
        {{/each}}
    </div>
</div>