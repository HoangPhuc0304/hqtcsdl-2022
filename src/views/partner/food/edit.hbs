<div class="container" style="height: calc(100vh - 112px);">
    <nav aria-label="breadcrumb" class="my-2 d-flex align-items-center justify-content-between">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/partner" class="text-dark">Home</a></li>
        </ol>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/partner/profile" class="text-dark">Account</a></li>
        </ol>
    </nav>
    <div class="card">
        <div class="card-body">
            <h1 class="cart-header">Chỉnh sửa món ăn</h1>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="/static/images/Food.jpg" class="img-responsive"
                            style="width: 100%; aspect-ratio: 2/3; object-fit: cover; border-radius: 4px 4px 0 0; transition: all 0.5s ease-in-out;">
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    {{#with food}}
                    <form action="/partner/food/{{ID_Mon}}/edit" method="POST">
                        <div class="form-group mb-3">
                            <label class=" control-label no-padding-right" for="name">Name:</label>
                            <div style="display: flex; flex-direction: column;">
                                <input type="text" id="name" name="name" required value="{{TenMon}}">
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label class=" control-label no-padding-right" for="description">Description:</label>
                            <div style="display: flex; flex-direction: column;">
                                <input type="text" id="description" name="description" required value="{{MieuTa}}">
                            </div>
                        </div>
                        <div class="form-group mb-3 d-flex">
                            <div class="me-2">
                                <label class=" control-label no-padding-right" for="price">Price:</label>
                                <div style="display: flex; flex-direction: column;">
                                    <input type="text" id="price" name="price" disabled value="{{GiaBan}}">
                                </div>
                            </div>
                            <div class="">
                                <label class=" control-label no-padding-right" for="change">Change:</label>
                                <div style="display: flex; flex-direction: column;">
                                    <input type="number" id="change" name="change" required value="0">
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label class=" control-label no-padding-right" for="status">Status:</label>
                            <div style="display: flex; flex-direction: column;">
                                <input type="text" id="status" name="status" required value="{{TinhTrangMon}}">
                            </div>
                        </div>
                        <a href="/partner" class="btn btn-secondary" style="width: 100px;">Back</a>
                        <button type="submit" class="btn btn-primary" style="width: 100px;">Save</button>
                    </form>
                    {{/with}}
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    const selectAddress = document.querySelector('#address-select');
    const address = document.querySelector('#address');

    selectAddress.onchange = (e) => {
        address.value = e.target.value;
    }
</script>